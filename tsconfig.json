{
  "extends": "@react-native/typescript-config",
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    // https://github.com/vonovak/react-navigation-header-buttons/blob/master/INSTALL.md
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "#src/*": [
        "./src/*"
      ],
      "#assets/*": [
        "./assets/*"
      ],
      "#specs/*": [
        "./specs/*"
      ]
    }
  }
}